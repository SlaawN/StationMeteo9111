unsigned char * CList::allumer(unsigned char value)
{
	unsigned char * trame = new unsigned char[6];

	trame[0] = 0x81;
	trame[1] = 0x01;
	trame[2] = 0x04;
	trame[3] = 0x00;
	trame[4] = value;
	trame[5] = 0xff;

	return trame;
}
unsigned char * CList::zoom(unsigned char value)
{
	unsigned char * trame = new unsigned char[6];

	trame[0] = 0x81;
	trame[1] = 0x01;
	trame[2] = 0x04;
	trame[3] = 0x07;
	trame[4] = value;
	trame[5] = 0xff;

	return trame;

}
unsigned char * CList::deplaceY(unsigned char value)//Déplacement sur l'axe Y : Haut et Bas
{
	unsigned char * trame = new unsigned char[9];

	trame[0] = 0x81;
	trame[1] = 0x01;
	trame[2] = 0x06;
	trame[3] = 0x01;
	trame[4] = 0x05;
	trame[5] = 0x05;
	trame[6] = 0x03;
	trame[7] = value;
	trame[8] = 0xff;

	return trame;

}

unsigned char * CList::deplaceX(unsigned char value)//Déplacement sur l'axe X : Droite et Gauche
{
	unsigned char * trame = new unsigned char[9];

	trame[0] = 0x81;
	trame[1] = 0x01;
	trame[2] = 0x06;
	trame[3] = 0x01;
	trame[4] = 0x05;
	trame[5] = 0x05;
	trame[6] = value;
	trame[7] = 0x03;
	trame[8] = 0xff;

	return trame;

}