//---------------------------------------------------------------------------

#pragma hdrstop

#include "CList.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
/*
AIDE TRAMES CAMERA
"8101040002ff" //Allumer la caméra
"8101040003ff" //Éteindre la caméra
"8101040700ff" //Arréter le zoom
"8101040732ff" //Zoom Arrière/Dézoom
"8101040723ff" //Zoom Avant/Zoom
"8101060105050303ff" // Arreter le deplacement
"8101060105050301ff" //Deplacement Caméra Axe Y: Haut
"8101060105050302ff" //Deplacement Caméra Aye y : Bas
"8101060105050203ff" //Deplacement Caméra Axe X : Droite
"8101060105050103ff" //Deplacement Caméra Axe X : Gauche
*/
unsigned char * CList::allumer(unsigned char value)  //Allumage de la caméra
{
	unsigned char * trame = new unsigned char[6];

	trame[0] = 0x81;
	trame[1] = 0x01;
	trame[2] = 0x04;
	trame[3] = 0x00;
	trame[4] = value;
	trame[5] = 0xff;

	return trame;
}
unsigned char * CList::zoom(unsigned char value)//Zoom Avant et Arrière
{
	unsigned char * trame = new unsigned char[6];

	trame[0] = 0x81;
	trame[1] = 0x01;
	trame[2] = 0x04;
	trame[3] = 0x07;
	trame[4] = value;
	trame[5] = 0xff;

	return trame;

}
unsigned char * CList::deplaceY(unsigned char value)//Déplacement sur l'axe Y : Haut et Bas
{
	unsigned char * trame = new unsigned char[9];

	trame[0] = 0x81;
	trame[1] = 0x01;
	trame[2] = 0x06;
	trame[3] = 0x01;
	trame[4] = 0x05;
	trame[5] = 0x05;
	trame[6] = 0x03;
	trame[7] = value;
	trame[8] = 0xff;

	return trame;

}

unsigned char * CList::deplaceX(unsigned char value)//Déplacement sur l'axe X : Droite et Gauche
{
	unsigned char * trame = new unsigned char[9];

	trame[0] = 0x81;
	trame[1] = 0x01;
	trame[2] = 0x06;
	trame[3] = 0x01;
	trame[4] = 0x05;
	trame[5] = 0x05;
	trame[6] = value;
	trame[7] = 0x03;
	trame[8] = 0xff;

	return trame;

}